<h1>カテゴリ一覧</h1>

<table>
  <thead>
    <tr>
      <th>カテゴリ名</th>
      <th colspan="3">コマンド</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="command"><%= link_to '確認', category %></td>
        <td class="command"><%= link_to '編集', edit_category_path(category) %></td>
        <td class="command"><%= link_to '削除', category, method: :delete, data: { confirm: 'このカテゴリを削除します。よろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カテゴリの新規作成', new_category_path %>
<%= link_to 'タスク一覧に戻る', tasks_path %>
