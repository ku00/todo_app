<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>Check</th>
      <th>Priority</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.start %></td>
        <td><%= task.deadline %></td>
        <td><%= task.description %></td>
        <td><%= task.check %></td>
        <td><%= task.priority %></td>
        <td><%= Category.find(task.category_id).name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  現在タスクは<%= @task_count %>個です。
</p>

<%= link_to 'New Task', new_task_path %>
