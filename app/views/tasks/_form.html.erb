<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :名前 %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :開始日時 %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :締切日時 %><br>
    <%= f.datetime_select :deadline,:default => Time.now + 7.day %>
  </div>
  <div class="field">
    <%= f.label :詳細 %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :完了 %><br>
    <%= f.check_box :check %>
  </div>
  <div class="field">
    <%= f.label :優先度 %><br>
    <%= f.number_field :priority %>
  </div>
  <div class="field">
    <%= f.label :カテゴリ %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit('新規作成') %>
  </div>
<% end %>
